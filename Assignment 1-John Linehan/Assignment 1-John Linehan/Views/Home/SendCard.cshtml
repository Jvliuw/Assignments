@model Assignment_1_John_Linehan.Models.SendCard
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" type="text/css" href="~/Content/styles.css" />
    <title>SendCard</title>
</head>
@{
//Layout = null;
}

<head>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    
</head>

@using (Html.BeginForm())
{
    @Html.ValidationSummary()
    <p>
        <label>From:</label> @Html.TextBoxFor(t => t.From,
    new { @class = "form-control", maxlength = 30, style = "width:200px;" })
    </p>
    <p>
        <label>To:</label> @Html.TextBoxFor(t => t.To,
    new { @class = "form-control", maxlength = 30, style = "width:200px;" })
    </p>
    <p>
        <label>Message:</label> @Html.TextBoxFor(t => t.Message,
    new { @class = "form-control", maxlength = 30, style = "width:200px;" })
    </p>

    <input type="submit" value="Create Card" />
}
